            VALUE "Comments", "${COMMENTS}"
            VALUE "CompanyName", "James Touton"
            VALUE "FileDescription", "${DESCRIPTION}"
            VALUE "FileVersion", "${VERSION}"
            VALUE "InternalName", "${NAME}"
